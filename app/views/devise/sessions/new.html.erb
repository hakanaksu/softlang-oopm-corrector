<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <legend>Log in</legend>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Please enter your E-Mail' %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Please enter your Password...' %>
        </div>

        <div class="checkbox">
          <%= f.label :remember_me do %>
              <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %> Remember me
              <% end -%>
          <% end %>
        </div>

        <div><%= f.submit "Log in", class: 'btn btn-primary' %></div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>

